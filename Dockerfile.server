FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
COPY tsconfig*.json ./
COPY server/ ./server
COPY shared/ ./shared

# Устанавливаем зависимости, включая dev-зависимости
RUN --mount=type=cache,target=/root/.npm \
    npm ci --omit=dev=false

# Запуск с tsx как загрузчиком
CMD ["node", "--loader", "tsx", "server/index.ts"]
